<% layout('layouts/boilerplate') %>

    <form action="/campgrounds/<%= foundCamp._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title: </label>
            <input type="text" value="<%= foundCamp.title %>" name="campground[title]" id="title">
        </div>
        <div>
            <label for="location">Location: </label>
            <input type="text" value="<%= foundCamp.location %>" name="campground[location]" id="location">
        </div>

        <button>save changes</button>
    </form>

    <a href="/campgrounds">all campgrounds</a>