<% layout('layouts/boilerplate') %>


    <h1 class="text-center mb-3">All campgrounds</h1>

    <ul>
        <% for( let camp of allCamps) { %>

            <div class="card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <!-- img-fluid makes the image responsive -->
                        <img src="<%= camp.image %>" class="img-fluid">
                    </div>
                    <div class="card-body col-md-8">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text text-secondary">
                            <%= camp.location %>
                        </p>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View Camp</a>
                    </div>
                </div>
            </div>

            <% } %>
    </ul>