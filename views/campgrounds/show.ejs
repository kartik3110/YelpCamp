<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= foundCamp.image %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= foundCamp.title %>
                    </h5>
                    <p class="card-text">
                        <%= foundCamp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-geo-alt-fill pb-1" viewBox="0 0 16 16">
                            <path
                                d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                        </svg>
                        <%= foundCamp.location %>
                    </li>
                    <li class="list-group-item">$ <%= foundCamp.price %>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%= foundCamp._id %>/edit" class="btn btn-info text-white">
                        edit camp
                    </a>
                    <form class="d-inline" action="/campgrounds/<%= foundCamp._id %>?_method=delete" method="POST">
                        <button class="btn btn-danger">
                            Delete campground
                        </button>
                    </form>
                </div>
                <div class="card-footer mb-3">
                    2 days ago
                </div>
            </div>
        </div>
        <div class="col-6">
            <h3>Leave a review!</h3>
            <form action="/campgrounds/<%=foundCamp._id %>/reviews" class="mb-3 needs-validation" method="POST"
                novalidate>
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input class="form-range" id="rating" name="review[rating]" type="range" max="5" min="1">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                        placeholder="Add a review.." required></textarea>
                </div>
                <button class="btn btn-success">Done!</button>
            </form>


            <% for(let review of foundCamp.reviews) { %>
                <div class="card mb-3 ">
                    <div class="card-body">
                        <h5 class="card-title">Rating: <%= review.rating %>
                        </h5>
                        <p class="card-text">Review: <%= review.body %>
                        </p>
                        <form action="/campgrounds/<%=foundCamp._id %>/reviews/<%= review._id %>?_method=Delete"
                            method="POST">
                            <button class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>